<% if job_creator?(Job.find(params[:id])) %>

    <%= form_for([@job, @job.reviews.build]) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div>
      <%= f.text_area :content, placeholder: "Create new review..." %>
    </div>
    <%= f.submit "Post" %>

  <% end %>
<% end %>
