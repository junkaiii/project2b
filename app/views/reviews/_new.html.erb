<%# if @job.reviews.empty? && @job.user.id != current_user.id %>
<% if job_creator?(@job) %>

    <%= form_for([@job, @job.reviews.build]) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    </div>
    <%= f.submit "Post" %>

  <% end %>
<% end %>
