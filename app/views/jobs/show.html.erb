<div>
<p>
  <strong>Job Description:</strong>
  <%= @job.content %>
</p>
</div>
<div>
<p>
<strong>Posted By:</strong>
<%= @job.user.email %>
</p>
</div>

<div>
  <% if @job.reviews.any? %>
  <h3>Reviews (<%= @job.reviews.count %>):</h3>
  <ol>
    <%= render @reviews %>
  </ol>
  <%= will_paginate @reviews%>
  <% end %>
  <%= render "reviews/new" %>
  <%= form_for(@job) do |f| %>
    <%= f.hidden_field(:if_sold, :value => "true") %>
    <%= f.submit "Job Completed" %>
  <% end %>
</div>
